{
  "name": "directory-cls",
  "version": "1.0.0",
  "description": "Code challenge with directory management commands",
  "main": "bin/index.js",
  "scripts": {
    "build": "rimraf bin/ && babel ./src --out-dir bin/ --ignore **/*.test.js,./node_modules,./.babelrc,./package.json,./npm-debug.log --copy-files --no-copy-ignored",
    "test": "jest",
    "lint": "eslint --fix src/**/*.js",
    "format": "prettier --write src/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrieltello/directory-cls.git"
  },
  "author": "Gabriel Tello",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gabrieltello/directory-cls/issues"
  },
  "homepage": "https://github.com/gabrieltello/directory-cls#readme",
  "devDependencies": {
    "@babel/cli": "^7.16.0",
    "@babel/core": "^7.16.5",
    "@babel/eslint-parser": "^7.16.5",
    "@babel/preset-env": "^7.16.5",
    "eslint": "^8.5.0",
    "jest": "^27.4.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2"
  }
}
